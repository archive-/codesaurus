<div class="feature">
	<h2><b>[<%= feature.language.name %>]</b> <%= link_to feature.name, feature %> (<%= link_to 'edit', edit_feature_path(feature) %>)</h2>
	<pre class="feature-info"><%= raw(truncate(feature.info.gsub(/\r\n/, ' '), 280, "... ("+(link_to 'read more', feature)+")")) %></pre>
	<pre class="feature-snippet prettyprint linenums"><%= feature.snippet %></pre>
	<p>Edited <%= pluralize(feature.versions.size, 'time') %>.<%= " Last edit by #{feature.versions.last.whodunnit.gsub(/([0-9]+).([0-9]+).([0-9]+).([0-9]+)/, 'xxx.xxx.\3.\4')} on #{feature.versions.last.created_at.strftime("%m/%d/%Y at %I:%M%p")}." if feature.versions.size > 0 %></p>
	<p><%= link_to feature.url, feature.url %></p>
</div>
